<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:WordLens.ViewModels"
             mc:Ignorable="d" d:DesignWidth="600" d:DesignHeight="500"
             x:Class="WordLens.Views.AboutView"
             x:DataType="vm:AboutViewModel">
    
    <Design.DataContext>
        <vm:AboutViewModel />
    </Design.DataContext>

    <ScrollViewer>
        <StackPanel Spacing="24" Margin="20" MaxWidth="550">
            
            <!-- 应用标题区域 -->
            <Border Background="#F8F9FA"
                    BorderBrush="#E0E0E0"
                    BorderThickness="1"
                    CornerRadius="12"
                    Padding="30,40">
                <StackPanel Spacing="12" HorizontalAlignment="Center">
                    <!-- 应用图标 -->
                    <Border Width="80" Height="80"
                            Background="#409EFF"
                            CornerRadius="16"
                            HorizontalAlignment="Center">
                        <PathIcon Width="48" Height="48"
                                  Data="{StaticResource translate_regular}"
                                  Foreground="White" />
                    </Border>
                    
                    <!-- 应用名称 -->
                    <TextBlock Text="{Binding AppName}"
                               FontSize="32"
                               FontWeight="Bold"
                               HorizontalAlignment="Center"
                               Foreground="#333" />
                    
                    <!-- 版本号 -->
                    <TextBlock Text="{Binding Version}"
                               FontSize="16"
                               HorizontalAlignment="Center"
                               Foreground="#666" />
                    
                    <!-- 描述 -->
                    <TextBlock Text="{Binding Description}"
                               FontSize="14"
                               HorizontalAlignment="Center"
                               Foreground="#888"
                               Margin="0,8,0,0" />
                    
                    <!-- GitHub 按钮 -->
                    <Button Command="{Binding OpenGitHubCommand}"
                            HorizontalAlignment="Center"
                            Margin="0,16,0,0"
                            Padding="20,8"
                            Background="#24292e"
                            Foreground="White"
                            CornerRadius="6"
                            BorderThickness="0"
                            Cursor="Hand">
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <PathIcon Width="16" Height="16"
                                      Data="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"
                                      Foreground="White" />
                            <TextBlock Text="在 GitHub 上查看"
                                       VerticalAlignment="Center" />
                        </StackPanel>
                    </Button>
                </StackPanel>
            </Border>

            <!-- 版权信息 -->
            <Border Background="White"
                    BorderBrush="#E0E0E0"
                    BorderThickness="1"
                    CornerRadius="8"
                    Padding="20">
                <StackPanel Spacing="8">
                    <TextBlock Text="版权信息"
                               FontSize="16"
                               FontWeight="SemiBold"
                               Foreground="#333" />
                    <TextBlock Text="{Binding Copyright}"
                               FontSize="14"
                               Foreground="#666"
                               TextWrapping="Wrap" />
                </StackPanel>
            </Border>

            <!-- 开源协议 -->
            <Border Background="White"
                    BorderBrush="#E0E0E0"
                    BorderThickness="1"
                    CornerRadius="8"
                    Padding="20">
                <StackPanel Spacing="12">
                    <TextBlock Text="开源协议"
                               FontSize="16"
                               FontWeight="SemiBold"
                               Foreground="#333" />
                    <TextBlock Text="{Binding License}"
                               FontSize="14"
                               FontWeight="SemiBold"
                               Foreground="#409EFF" />
                    <Border Background="#F8F9FA"
                            BorderBrush="#E0E0E0"
                            BorderThickness="1"
                            CornerRadius="6"
                            Padding="16"
                            MaxHeight="200">
                        <ScrollViewer>
                            <TextBlock Text="{Binding LicenseText}"
                                       FontSize="12"
                                       FontFamily="Consolas,Courier New,monospace"
                                       Foreground="#666"
                                       TextWrapping="Wrap"
                                       LineHeight="18" />
                        </ScrollViewer>
                    </Border>
                </StackPanel>
            </Border>

            <!-- 第三方库 -->
            <Border Background="White"
                    BorderBrush="#E0E0E0"
                    BorderThickness="1"
                    CornerRadius="8"
                    Padding="20">
                <StackPanel Spacing="12">
                    <TextBlock Text="第三方开源库"
                               FontSize="16"
                               FontWeight="SemiBold"
                               Foreground="#333" />
                    <TextBlock Text="感谢以下开源项目的支持："
                               FontSize="13"
                               Foreground="#666" />
                    <Border Background="#F8F9FA"
                            BorderBrush="#E0E0E0"
                            BorderThickness="1"
                            CornerRadius="6"
                            Padding="16">
                        <TextBlock Text="{Binding ThirdPartyLibraries}"
                                   FontSize="13"
                                   Foreground="#666"
                                   TextWrapping="Wrap"
                                   LineHeight="20" />
                    </Border>
                </StackPanel>
            </Border>

        </StackPanel>
    </ScrollViewer>
</UserControl>